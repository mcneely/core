{
  "name": "mcneely/core",
  "require-dev": {
    "phpunit/phpunit": "^7.1",
    "phpstan/phpstan": "^0.9.2"
  },
  "authors": [
    {
      "name": "Paul McNeely",
      "email": "paul@paulmcneely.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "ext-json": "*"
  },
  "autoload": {
    "psr-4": {
      "Mcneely\\Core\\": "src/"
    }
  },
  "scripts": {
    "test": "phpunit --bootstrap vendor/autoload.php tests/",
    "coverage": "phpunit  --coverage-clover=coverage/coverage.xml --coverage-html=coverage --whitelist src/ --bootstrap vendor/autoload.php tests/",
    "static": "phpstan analyse -l 7 src/"
  },
  "config": {
    "bin-dir": "bin/"
  }
}
